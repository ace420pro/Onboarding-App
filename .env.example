# Database
DATABASE_URL="postgresql://username:password@localhost:5432/edgevantage_onboarding"

# Server Configuration
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# Email Configuration (Gmail/SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=EdgeVantage Onboarding <noreply@edgevantage.com>

# Twilio SMS Configuration
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379

# Application URLs
CLIENT_URL=http://localhost:3001
SERVER_URL=http://localhost:5000

# Identity Verification
VERIFICATION_BASE_URL=http://localhost:3001/verify

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Automation Settings
MAX_CONCURRENT_AUTOMATIONS=5
AUTOMATION_TIMEOUT_MS=300000